datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Job {
  applications Application[]
  company      Company?          @relation(fields: [companyId], references: [id])
  companyId    String?
  createdAt    DateTime          @default(now())
  description  String?
  id           String            @id @default(cuid())
  language     Language?         @relation(fields: [languageId], references: [id])
  languageId   String?
  location     String?
  postedAt     DateTime?
  title        String?
  typeField    EnumJobTypeField?
  updatedAt    DateTime          @updatedAt
}

model Company {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  jobs        Job[]
  location    String?
  name        String?
  updatedAt   DateTime @updatedAt
  website     String?
}

model Language {
  code      String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  jobs      Job[]
  name      String?
  updatedAt DateTime @updatedAt
}

model Application {
  appliedAt DateTime?
  createdAt DateTime               @default(now())
  id        String                 @id @default(cuid())
  job       Job?                   @relation(fields: [jobId], references: [id])
  jobId     String?
  status    EnumApplicationStatus?
  updatedAt DateTime               @updatedAt
  user      User?                  @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  applications Application[]
  createdAt    DateTime      @default(now())
  email        String?       @unique
  firstName    String?
  id           String        @id @default(cuid())
  lastName     String?
  password     String
  roles        Json
  updatedAt    DateTime      @updatedAt
  username     String        @unique
}

enum EnumJobTypeField {
  Option1
}

enum EnumApplicationStatus {
  Option1
}
